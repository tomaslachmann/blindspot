{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "types",
    "declaration": true,         // ðŸ‘ˆ emits .d.ts files
    "emitDeclarationOnly": true, // ðŸ‘ˆ no .js files, just types
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "types", ".reactblindspot"]
}

